 <div style="margin-bottom: 20px; border-bottom: 2px solid #0077b6; padding-bottom: 10px; display: block;">
    <div style="display: inline-block; vertical-align: middle;">
      <img src="<%= logoDataUrl %>" alt="Logo Aerolínea" style="width: 100px; margin-right: 15px;" />
    </div>
    <div style="display: inline-block; vertical-align: middle; font-size: 1.2rem; font-weight: bold; color: #023e8a;">
      AirLink
    </div>
  </div>

  <% billetes.forEach(billete => { %>
    <div style="border: 1px solid #ccc; padding: 15px; border-radius: 6px; margin-bottom: 20px; page-break-inside: avoid;">
      <h2 style="color: #0077b6; margin-bottom: 10px; font-size: 1rem; border-left: 4px solid #0077b6; padding-left: 8px;">
        Detalles del vuelo - <%= billete.pasajero.nombre %> <%= billete.pasajero.apellidos %>
      </h2>
      <table style="width: 100%; border-collapse: collapse;">
        <tr>
          <td style="font-weight: 600; background-color: #f2f2f2; padding: 6px 8px; border-bottom: 1px solid #ddd; width: 40%;">Número de vuelo</td>
          <td style="padding: 6px 8px; border-bottom: 1px solid #ddd;"><%= billete.vuelo.numero_vuelo %></td>
        </tr>
        <tr>
          <td style="font-weight: 600; background-color: #f2f2f2; padding: 6px 8px; border-bottom: 1px solid #ddd;">Fecha de salida</td>
          <td style="padding: 6px 8px; border-bottom: 1px solid #ddd;">
            <%= new Date(billete.vuelo.fecha_salida).toLocaleString('es-ES', { dateStyle: 'medium', timeStyle: 'short' }) %>
          </td>
        </tr>
        <tr>
          <td style="font-weight: 600; background-color: #f2f2f2; padding: 6px 8px; border-bottom: 1px solid #ddd;">Fecha de llegada</td>
          <td style="padding: 6px 8px; border-bottom: 1px solid #ddd;">
            <%= new Date(billete.vuelo.fecha_llegada).toLocaleString('es-ES', { dateStyle: 'medium', timeStyle: 'short' }) %>
          </td>
        </tr>
        <tr>
          <td style="font-weight: 600; background-color: #f2f2f2; padding: 6px 8px; border-bottom: 1px solid #ddd;">Aeropuerto de origen</td>
          <td style="padding: 6px 8px; border-bottom: 1px solid #ddd;"><%= billete.vuelo.aeropuerto_origen.nombre %></td>
        </tr>
        <tr>
          <td style="font-weight: 600; background-color: #f2f2f2; padding: 6px 8px; border-bottom: 1px solid #ddd;">Aeropuerto de llegada</td>
          <td style="padding: 6px 8px; border-bottom: 1px solid #ddd;"><%= billete.vuelo.aeropuerto_destino.nombre %></td>
        </tr>
        <tr>
          <td style="font-weight: 600; background-color: #f2f2f2; padding: 6px 8px; border-bottom: 1px solid #ddd;">Asiento</td>
          <td style="padding: 6px 8px; border-bottom: 1px solid #ddd;">
            <%= billete.asiento.codigo_asiento %> (Fila: <%= billete.asiento.fila %>, Columna: <%= billete.asiento.columna %>)
          </td>
        </tr>
        <tr>
          <td style="font-weight: 600; background-color: #f2f2f2; padding: 6px 8px; border-bottom: 1px solid #ddd;">Precio</td>
          <td style="padding: 6px 8px; border-bottom: 1px solid #ddd;"><%= billete.precio %> EUR</td>
        </tr>
        <tr>
          <td style="font-weight: 600; background-color: #f2f2f2; padding: 6px 8px; border-bottom: 1px solid #ddd;">Localizador</td>
          <td style="padding: 6px 8px; border-bottom: 1px solid #ddd;"><%= billete.localizador %></td>
        </tr>
        <tr>
          <td style="font-weight: 600; background-color: #f2f2f2; padding: 6px 8px;">Aerolínea operadora</td>
          <td style="padding: 6px 8px;"><%= billete.vuelo.aerolinea.nombre || 'N/D' %></td>
        </tr>
      </table>
    </div>
  <% }) %>